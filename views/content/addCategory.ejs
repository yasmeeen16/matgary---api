<%include ../layout/header.ejs%>

<div class="main-panel">
    <div class="content">


        <div class="container-fluid">
            <div class="row">

                <div class="col-xs-12">
                    <form class="" action="/webadmin/addCategory" method="post" enctype="multipart/form-data">
                    <div class=" row data-container">
                        <div class="col-xs-12">
                        <div class="col-xs-12 product-image">
                            <div class="file-upload">
                                <label for="upload" class="file-upload__label"> <img style="width:60%;    border-radius: 50%;" title="choose images" src="/assets/img/upload.jpeg" alt=""> </label>
                                <input id="upload" class="file-upload__input" type="file" name="img" required>
                            </div>
                        </div>





                                <div class="form-group">
                                    <div class="form-group">
                                            <input class="form-control" name="Ename" placeholder="الاسم بالانجليزي " required>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" name="Aname" placeholder="الاسم بالعربي" required>
                                    </div>
                                    <div class="form-group">
                                        <div class=" form-control">
                                                <select name="parent">
                                                        <option value="0">اختر القسم الرئيسى</option>
                                                        <%data.forEach(function(category){ %>
                                                            <option value="<%=category._id %>"><%=category.Aname %></option>

                                                        <%});%>
                                                </select>
                                              </div>
                                        </div>
                                        <div class=" form-group">
                                            <button type="submit" class="add form-control">اضافه القسم</button>
                                        </div>
                                </div>









                        </div>



                    </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<%include ../layout/footer.ejs%>
